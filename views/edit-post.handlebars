<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <br />
    <div>
      <h3>Post Title</h3>
      <input
        class="form-input"
        name="post-title"
        type="text"
        value="{{post.title}}"
      />
      <h3>Post Body</h3>
      <input
        class="form-input"
        name="post-text"
        type="text"
        value="{{post.post_text}}"
      />
    </div>
    <div>
      Created on
      {{format_date post.created_at}}
    </div>
    <button class="btn" type="submit">Update post</button>
    <button type="button" class="delete-btn btn">Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>