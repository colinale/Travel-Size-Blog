<article class="post">
  <div class="title card">
    <h2 class="card-header">{{title}}</h2>
    <p class="card-body">{{post_text}}</p>
    <div class="image">
      <img src="https://res.cloudinary.com/degnyzbus/image/upload/w_600,h_300,c_fill,q_100/{{image}}.jpg" alt="" />
    </div>
    <h3 class="list-group">
      Created by
      {{user.username}}
      on
      {{format_date created_at}}
    </h3>
  </div>
</article>